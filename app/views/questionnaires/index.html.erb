<div class="row justify-content-center mt-3 mb-5">
  <div class="col-md-3">
<p id="notice"><%= notice %></p>

<h1>Questionnaires</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questionnaires.each do |questionnaire| %>
      <tr>
        <td><%= questionnaire.name %></td>
        <td><%= link_to 'Show', questionnaire, class: "btn btn-secondary mx-5 me-2" %></td>
        <td><%= link_to 'Edit', edit_questionnaire_path(questionnaire), class: "btn btn-secondary me-2" %></td>
        <td><%= link_to 'Destroy', questionnaire, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Questionnaire', new_questionnaire_path, class: "btn btn-primary" %>
<div>
</div>
